{
  "name": "alpha-badger",
  "productName": "alpha-badger",
  "version": "0.0.13",
  "description": "Alpha Badger",
  "main": "dist/main/index.js",
  "scripts": {
    "copy-renderer": "copyfiles -f src/renderer/*.html src/renderer/*.css dist/renderer",
    "start": "npm run copy-renderer && electron-forge start",
    "develop": "npm run copy-renderer && concurrently \"tsc -w \" \"electron-forge start\"",
    "develop-debug": "npm run copy-renderer && concurrently \"tsc -w \" \"electron-forge start --inspect-electron\"",
    "tsc": "tsc",
    "package": "electron-forge package",
    "make": "npm run tsc && npm run copy-renderer && electron-forge make",
    "make-clean": "rimraf dist && rimraf out && npm run make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx,.js,.tsx,.json ./src",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit true",
    "checks": "npm run typecheck && npm run lint"
  },
  "keywords": [
    "FFmpeg",
    "GUI"
  ],
  "author": {
    "name": "NoamR",
    "email": "noamraby@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "alpha_badger"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.60",
    "@electron-forge/maker-deb": "6.0.0-beta.60",
    "@electron-forge/maker-dmg": "6.0.0-beta.60",
    "@electron-forge/maker-rpm": "6.0.0-beta.60",
    "@electron-forge/maker-squirrel": "6.0.0-beta.60",
    "@electron-forge/maker-zip": "6.0.0-beta.60",
    "@electron-forge/plugin-webpack": "6.0.0-beta.60",
    "@electron-forge/publisher-github": "6.0.0-beta.60",
    "@types/fs-extra": "9.0.12",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "concurrently": "6.2.1",
    "copyfiles": "2.4.1",
    "css-loader": "6.2.0",
    "electron": "13.1.9",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-prettier": "4.0.0",
    "fork-ts-checker-webpack-plugin": "6.3.3",
    "node-loader": "2.0.0",
    "prettier": "2.3.2",
    "style-loader": "3.2.1",
    "ts-loader": "9.2.5",
    "typescript": "4.4.2"
  },
  "dependencies": {
    "electron-squirrel-startup": "1.0.0",
    "electron-store": "8.0.0",
    "fs-extra": "10.0.0"
  }
}
