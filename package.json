{
  "name": "alpha-badger",
  "version": "1.0.0",
  "description": "one-trick-badger app for resizing video",
  "author": "NoamR",
  "main": "dist/electron.js",
  "scripts": {
    "build": "webpack --config ./webpack.config.js",
    "develop": "webpack --config ./webpack.config.js --watch",
    "start": "electron ./dist/electron.js",
    "start:debug": "electron --inspect=5858 ./dist/electron.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "badger.alpha",
    "files": [
      "./dist/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "./src/assets/images/alphaBadger.png"
    },
    "directories": {
      "buildResources": "public"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoamRa/alpha-badger.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NoamRa/alpha-badger/issues"
  },
  "homepage": "https://github.com/NoamRa/alpha-badger#readme",
  "devDependencies": {
    "@types/ffmpeg-static": "^3.0.0",
    "@types/fluent-ffmpeg": "^2.1.14",
    "@types/react": "16.9.25",
    "@types/react-dom": "16.9.5",
    "electron": "8.2.0",
    "electron-builder": "^22.4.1",
    "ffmpeg-static": "^4.0.1",
    "ffmpeg-static-electron": "^2.0.1",
    "fluent-ffmpeg": "2.1.2",
    "html-webpack-plugin": "4.0.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "ts-loader": "6.2.2",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11"
  },
  "dependencies": {}
}
