{
  "name": "alpha-badger",
  "productName": "alpha-badger",
  "version": "0.0.14",
  "description": "Alpha Badger",
  "main": ".webpack/main",
  "scripts": {
    "--copy-renderer": "copyfiles -f src/renderer/*.html src/renderer/*.css dist/renderer",
    "--start": "npm run copy-renderer && electron-forge start",
    "start": "electron-forge start",
    "--develop": "npm run copy-renderer && concurrently \"tsc -w \" \"electron-forge start\"",
    "--develop-debug": "npm run copy-renderer && concurrently \"tsc -w \" \"electron-forge start --inspect-electron\"",
    "--tsc": "tsc",
    "package": "electron-forge package",
    "--make": "npm run tsc && npm run copy-renderer && electron-forge make",
    "make": "electron-forge make",
    "make-clean": "rimraf dist && rimraf out && npm run make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx,.js,.tsx,.json .",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit true",
    "checks": "npm run typecheck && npm run lint"
  },
  "keywords": [
    "FFmpeg",
    "GUI"
  ],
  "author": {
    "name": "NoamR",
    "email": "noamraby@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "alpha_badger"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/main/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "7.18.9",
    "@babel/preset-react": "7.18.6",
    "@electron-forge/cli": "6.0.0-beta.65",
    "@electron-forge/maker-deb": "6.0.0-beta.65",
    "@electron-forge/maker-rpm": "6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "6.0.0-beta.65",
    "@electron-forge/maker-zip": "6.0.0-beta.65",
    "@electron-forge/plugin-webpack": "6.0.0-beta.65",
    "@electron-forge/publisher-github": "6.0.0-beta.65",
    "@types/fs-extra": "9.0.13",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "css-loader": "6.7.1",
    "electron": "19.0.10",
    "eslint": "8.21.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "fork-ts-checker-webpack-plugin": "7.2.13",
    "node-loader": "2.0.0",
    "prettier": "2.7.1",
    "style-loader": "3.3.1",
    "ts-loader": "9.3.1",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "1.0.0",
    "electron-store": "8.0.0",
    "fs-extra": "10.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
